    var phone = Parent.find('#txt-phone');
    var address = Parent.find('#address');
    var photo = Parent.find('#txt-file');
    var gender = Parent.find('#txt-gender');
    var status = Parent.find('#txt-status');

    var frm = eThis.closest('form.dpl'); // Get all inputs
    var frm_data = new FormData(frm[0]); // Create FormData object from the form

    $.ajax({
      url: 'action/save_employee.php',
